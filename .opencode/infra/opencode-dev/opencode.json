{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["./AGENTS.md", ".opencode/rules/*.md"],
  "model": "anthropic/claude-opus-4-6",
  "small_model": "anthropic/claude-sonnet-4-5",

  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["bunx", "@playwright/mcp@latest", "--browser", "firefox"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "memory": {
      "type": "local",
      "command": ["bun", ".opencode/scripts/memory-mcp.mjs"],
      "environment": {
        "OPENMEMORY_URL": "http://openmemory:8080"
      },
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": ["github-mcp-server", "stdio"],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PAT}"
      },
      "enabled": true
    },
    "sqlite": {
      "type": "local",
      "command": ["bunx", "sqlite-mcp", "data/accounts.sqlite"],
      "enabled": true
    },
    "cie": {
      "type": "local",
      "command": ["cie", "--mcp"],
      "enabled": true
    }
  },

  "permission": {
    "edit": "allow",
    "bash": {
      "*": "ask",
      "bun *": "allow",
      "bunx *": "allow",
      "npx *": "allow",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git branch*": "allow",
      "grep *": "allow",
      "find *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "wc *": "allow",
      "curl *": "allow",
      "docker *": "allow",
      "rm *": "allow",
      "git push*": "ask",
      "git commit*": "ask",
      "cie *": "allow"
    },
    "webfetch": "allow"
  }
}
