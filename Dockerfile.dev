# SuiteProxy — Dev container (hot reload)
# Source code is mounted as a volume, not copied.
#
FROM oven/bun:1.3-debian

# ── System dependencies for Camoufox + Xvfb ────────────────────────────
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl ca-certificates procps \
    # Virtual framebuffer
    xvfb \
    # GTK3 + GUI libs for Firefox/Camoufox
    libgtk-3-0 libdbus-glib-1-2 libasound2 \
    libx11-xcb1 libxcomposite1 libxdamage1 libxrandr2 libxtst6 \
    libpango-1.0-0 libcairo2 libatk1.0-0 libatk-bridge2.0-0 \
    libcups2 libdrm2 libgbm1 libxshmfence1 \
    # D-Bus (needed by Firefox for IPC)
    dbus dbus-x11 \
    # Fonts
    fonts-liberation fonts-noto-core \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# ── Entrypoint: Xvfb + bun install + camoufox fetch + nuxt dev ─────────
COPY docker-entrypoint.dev.sh /docker-entrypoint.dev.sh
RUN chmod +x /docker-entrypoint.dev.sh

EXPOSE 3000

ENTRYPOINT ["/docker-entrypoint.dev.sh"]
